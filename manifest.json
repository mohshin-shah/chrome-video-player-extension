{
  "manifest_version": 3,
  "name": "Video Player CSS Injector",
  "version": "1.0.0",
  "description": "Injects custom CSS for video player styling",
  "author": "Mohshin Shah <mohshinshah@gmail.com>",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://futurense.zoom.us/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Video Player CSS Injector"
  },
  "content_scripts": [
    {
      "matches": ["https://futurense.zoom.us/*"],
      "css": ["vid.css"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}

